<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<!-- ========== Form Bean Definitions ================================== -->
	<form-beans>
		<form-bean name="helloForm"
			type="it.danilo.form.HelloWorldForm" />
	</form-beans>
	<!-- ========== Action Mapping Definitions ============================= -->
	<action-mappings>
		<action name="helloForm" path="/HelloWorldy"
			type="it.danilo.action.HelloWorldAction" scope="request">
			<forward name="hello" path="/hellopg.jsp" />
			<forward name="ko" path="/ko.jsp" />
		</action>
	</action-mappings>
</struts-config>